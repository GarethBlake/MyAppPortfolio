<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8f5e9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:background="#e8f5e9"
        android:text="@string/title"
        android:textColor="#1b5e20"
        android:textSize="@dimen/abc_text_size_headline_material" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/spotifyStreamerButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="#1b5e20"
            android:onClick="launchSpotifyStreamer"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/spotify_streamer"
            android:textColor="#e8f5e9" />

        <Button
            android:id="@+id/scoresApp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="#1b5e20"
            android:onClick="launchScoresApp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/scores_app"
            android:textColor="#e8f5e9" />

        <Button
            android:id="@+id/libraryApp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="#1b5e20"
            android:onClick="launchLibraryApp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/library_app"
            android:textColor="#e8f5e9" />

        <Button
            android:id="@+id/buildItBigger"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="#1b5e20"
            android:onClick="launchBuildItBigger"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/build_it_bigger"
            android:textColor="#e8f5e9" />

        <Button
            android:id="@+id/xyzReader"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="#1b5e20"
            android:onClick="launchXYZReader"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/xyz_reader"
            android:textColor="#e8f5e9" />

        <Button
            android:id="@+id/capstone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="#1b5e20"
            android:onClick="launchCapstone"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/capstone_my_own_app"
            android:textColor="#e8f5e9" />

    </LinearLayout>


</RelativeLayout>
